{
  "manifest_version": 3,
  "name": "AWS Console Security Assistant",
  "version": "1.0.0",
  "description": "AWS Console 사용 시 보안 조언을 제공하는 AI 어시스턴트",
  
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*.amazonaws.com/*",
    "*://*.console.aws.amazon.com/*",
    "http://54.163.216.139/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.amazonaws.com/*",
        "*://*.console.aws.amazon.com/*"
      ],
      "js": ["theme-manager.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["consent.js"],
      "matches": [
        "*://*.amazonaws.com/*",
        "*://*.console.aws.amazon.com/*"
      ]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AWS Security Assistant"
  },
  
  "icons": {
    "16": "icons/white/aws-color(white).png",
    "48": "icons/white/aws-color(white).png",
    "128": "icons/white/aws-color(white).png"
  }
}